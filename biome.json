{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "files": {
        "include": ["src/", "*.ts"],
        "ignoreUnknown": false,
        "ignore": ["node_modules/*"]
    },
    "formatter": {
        "enabled": true,
        "indentWidth": 4,
        "indentStyle": "space",
        "lineWidth": 120,
        "lineEnding": "lf"
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "correctness": {
                "noUnusedImports": "off",
                "useExhaustiveDependencies": "off"
            },
            "style": {
                "noNonNullAssertion": "off"
            }
        }
    }
}
